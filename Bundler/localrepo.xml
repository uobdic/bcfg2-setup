<Bundle name='localrepo'>
<!--
  This bundle is to create a local YUM repository for storing the cluster
  RPMs that are not being stored in properly formed YUM repos online.
-->
  <Package name='createrepo'/>
  <Path name="/etc/httpd/conf.d/localrepo.conf" />
  <Path name='/srv/local-repo' />
  <Action name='create-localrepo' />
</Bundle>
